--==// BUTTON FUNCTION (DARK STYLE) //==--

local function newButton(txt, callback)
    local b = Instance.new("TextButton", contentFrame)
    b.Size = UDim2.new(1, 0, 0, 38)
    b.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
    b.TextColor3 = Color3.fromRGB(220, 220, 255)
    b.Font = Enum.Font.GothamMedium
    b.TextSize = 14
    b.Text = txt
    b.AutoButtonColor = false
    
    local btnCorner = Instance.new("UICorner", b)
    btnCorner.CornerRadius = UDim.new(0, 6)
    
    -- Hover effects
    b.MouseEnter:Connect(function()
        b.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
    end)
    
    b.MouseLeave:Connect(function()
        b.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
    end)
    
    b.MouseButton1Click:Connect(function()
        b.BackgroundColor3 = Color3.fromRGB(50, 50, 75)
        callback(b)
        task.wait(0.1)
        b.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
    end)
end

--==// BRING SYSTEM //==--

local angle = 0
local function getPos()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return CFrame.new() end
    angle += 0.7
    return hrp.CFrame * CFrame.new(math.cos(math.rad(angle))*8, 4, math.sin(math.rad(angle))*8)
end

local function bring(item)
    if not item then return end
    local part = item:FindFirstChild("Handle")
        or item:FindFirstChildWhichIsA("BasePart")
        or (item:IsA("Model") and item.PrimaryPart)

    if part then
        part.CFrame = getPos()
        task.wait(0.07)

        local p = item:FindFirstChildWhichIsA("ProximityPrompt")
        if p then fireproximityprompt(p) end
    end
end

--==// LOAD INFINITE YIELD FUNCTION //==--

local function loadInfiniteYield(button)
    button.Text = "ðŸŒ€ LOADING IY..."
    
    local success, errorMsg = pcall(function()
        -- Try to load Infinite Yield from GitHub
        local url = "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"
        local script = game:HttpGet(url, true)
        loadstring(script)()
    end)
    
    if success then
        button.Text = "ðŸŒ€ IY LOADED!"
        
        -- Show notification
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Sponge Hub";
            Text = "Infinite Yield Loaded!";
            Icon = "rbxassetid://6034509993";
            Duration = 3;
            Button1 = "OK"
        })
        
        -- Play success sound
        local s = Instance.new("Sound")
        s.SoundId = "rbxassetid://3570576887"  -- Success sound
        s.Volume = 0.3
        s.Parent = game:GetService("SoundService")
        s:Play()
        task.delay(2, function() s:Destroy() end)
    else
        button.Text = "ðŸŒ€ FAILED TO LOAD"
        
        -- Try alternative method
        task.wait(1)
        button.Text = "ðŸŒ€ TRYING ALT..."
        
        local success2 = pcall(function()
            loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
        end)
        
        if success2 then
            button.Text = "ðŸŒ€ IY LOADED!"
        else
            button.Text = "ðŸŒ€ LOAD FAILED"
            
            -- Show error notification
            game:GetService("StarterGui"):SetCore("SendNotification", {
                Title = "Sponge Hub";
                Text = "Failed to load Infinite Yield";
                Icon = "rbxassetid://6034684957";  -- Error icon
                Duration = 5;
                Button1 = "OK"
            })
        end
    end
    
    task.wait(2)
    button.Text = "ðŸŒ€ LOAD INFINITE YIELD"
end

--==// BUTTONS //==--

-- Load Infinite Yield Button
newButton("ðŸŒ€ LOAD INFINITE YIELD", loadInfiniteYield)

-- Bring All Jelly
newButton("ðŸ”µ Bring All Jelly", function(b)
    b.Text = "ðŸ”µ Working..."
    angle = 0
    local c = 0

    for _,v in workspace.LootDrops:GetDescendants() do
        if v.Name:find("Jelly") then
            bring(v)
            c += 1
        end
    end
    
    b.Text = (c > 0) and ("ðŸ”µ "..c.." Jelly!") or "No Jelly"
    task.wait(2)
    b.Text = "ðŸ”µ Bring All Jelly"
end)

-- Bring Food
newButton("ðŸ” Bring Food", function(b)
    b.Text = "ðŸ” Working..."
    angle = 0
    local c = 0
    local f = {"ChocolateBar","CannedBread","KelpShake","Acorn","JellyPatty","BlueJellyPatty","KrabbyPatty"}

    for _,v in workspace.LootDrops:GetDescendants() do
        if table.find(f, v.Name) then
            bring(v)
            c += 1
        end
    end

    b.Text = (c > 0) and ("ðŸ” "..c.." Food!") or "No Food"
    task.wait(2)
    b.Text = "ðŸ” Bring Food"
end)

-- Bring Scrap
newButton("ðŸ”§ Bring Scrap", function(b)
    b.Text = "ðŸ”§ Working..."
    angle = 0
    local c = 0
    local s = {"ToxicBarrel","BrokenMotorcycle","CyclopsHelmet","RubberTire","Muffler","OpenCan"}

    for _,v in workspace.LootDrops:GetDescendants() do
        if table.find(s, v.Name) then
            bring(v)
            c += 1
        end
    end

    b.Text = (c > 0) and ("ðŸ”§ "..c.." Scrap!") or "No Scrap"
    task.wait(2)
    b.Text = "ðŸ”§ Bring Scrap"
end)

-- Bring Bandages
newButton("ðŸ©¹ Bring Bandages", function(b)
    b.Text = "ðŸ©¹ Healing..."
    angle = 0
    local c = 0

    local bandagesFolder = workspace.LootDrops:FindFirstChild("Bandages")
    if bandagesFolder then
        for _, bandage in bandagesFolder:GetChildren() do
            if bandage:IsA("Model") or bandage:IsA("BasePart") then
                bring(bandage)
                c += 1
            end
        end
    else
        for _,v in workspace.LootDrops:GetDescendants() do
            if v.Name:find("Bandage") or v.Name == "Bandage" then
                bring(v)
                c += 1
            end
        end
    end

    b.Text = (c > 0) and ("ðŸ©¹ +"..c.." HP!") or "No Bandages"
    task.wait(2)
    b.Text = "ðŸ©¹ Bring Bandages"
end)

-- Rescue All Losted
newButton("ðŸ¦€ RESCUE ALL LOSTED", function(b)
    b.Text = "ðŸ¦€ RESCUING..."
    
    local char = player.Character or player.CharacterAdded:Wait()
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then 
        b.Text = "ðŸ¦€ NO HRP"
        task.wait(2)
        b.Text = "ðŸ¦€ RESCUE ALL LOSTED"
        return 
    end

    local saved = 0
    local names = {"MrKrabs", "SpongeBob", "Patrick", "Squidward", "Sandy"}
    
    for _, name in pairs(names) do
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("Model") and obj.Name == name then
                local primary = obj.PrimaryPart or obj:FindFirstChildWhichIsA("BasePart")
                if primary then
                    primary.CFrame = root.CFrame * CFrame.new(0, 0, -5 - (saved * 2))
                    saved = saved + 1
                    task.wait(0.1)
                    break
                end
            end
        end
    end

    if saved > 0 then
        b.Text = "ðŸ¦€ " .. saved .. "/5 SAVED"
    else
        b.Text = "ðŸ¦€ NOT FOUND"
    end
    
    task.wait(1.5)
    b.Text = "ðŸ¦€ RESCUE ALL LOSTED"
end)

