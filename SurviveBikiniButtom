--==// BRING SYSTEM //==--

local angle = 0
local function getPos()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return CFrame.new() end
    angle += 0.7
    return hrp.CFrame * CFrame.new(math.cos(math.rad(angle))*8, 4, math.sin(math.rad(angle))*8)
end

local function bring(item)
    if not item then return end
    local part = item:FindFirstChild("Handle")
        or item:FindFirstChildWhichIsA("BasePart")
        or (item:IsA("Model") and item.PrimaryPart)

    if part then
        part.CFrame = getPos()
        task.wait(0.07)

        local p = item:FindFirstChildWhichIsA("ProximityPrompt")
        if p then fireproximityprompt(p) end
    end
end

--==// FULL BRIGHT SYSTEM //==--

local Lighting = game:GetService("Lighting")
local fullBrightEnabled = false
local originalLightingSettings = {}

local function saveOriginalSettings()
    originalLightingSettings = {
        Brightness = Lighting.Brightness,
        Ambient = Lighting.Ambient,
        OutdoorAmbient = Lighting.OutdoorAmbient,
        ClockTime = Lighting.ClockTime,
        FogStart = Lighting.FogStart,
        FogEnd = Lighting.FogEnd,
        FogColor = Lighting.FogColor,
        GlobalShadows = Lighting.GlobalShadows,
        EnvironmentDiffuseScale = Lighting.EnvironmentDiffuseScale,
        EnvironmentSpecularScale = Lighting.EnvironmentSpecularScale,
        ExposureCompensation = Lighting.ExposureCompensation,
        GeographicLatitude = Lighting.GeographicLatitude
    }
    
    -- Clean up any existing FullBright effects
    for _, effect in pairs(Lighting:GetChildren()) do
        if effect.Name == "FullBrightColorCorrection" or effect.Name == "FullBrightBloom" then
            effect:Destroy()
        end
    end
end

local function applyFullBright()
    -- Save original settings if not already saved
    if next(originalLightingSettings) == nil then
        saveOriginalSettings()
    end
    
    -- Apply FullBright settings
    Lighting.Brightness = 2.5
    Lighting.Ambient = Color3.new(1, 1, 1)
    Lighting.OutdoorAmbient = Color3.new(1, 1, 1)
    Lighting.ClockTime = 14
    Lighting.FogStart = 999999
    Lighting.FogEnd = 1000000
    Lighting.FogColor = Color3.new(1, 1, 1)
    Lighting.GlobalShadows = false
    Lighting.EnvironmentDiffuseScale = 0
    Lighting.EnvironmentSpecularScale = 0
    Lighting.ExposureCompensation = 0.5
    Lighting.GeographicLatitude = 0
    
    -- Add visual effects
    local ColorCorrection = Instance.new("ColorCorrectionEffect")
    ColorCorrection.Name = "FullBrightColorCorrection"
    ColorCorrection.Brightness = 0.1
    ColorCorrection.Contrast = 0.1
    ColorCorrection.Saturation = 0
    ColorCorrection.TintColor = Color3.new(1, 1, 1)
    ColorCorrection.Parent = Lighting
    
    local Bloom = Instance.new("BloomEffect")
    Bloom.Name = "FullBrightBloom"
    Bloom.Intensity = 0.1
    Bloom.Size = 24
    Bloom.Threshold = 0.9
    Bloom.Parent = Lighting
    
    fullBrightEnabled = true
    print("‚úÖ FullBright Applied: Night ‚Üí Morning, Fog Removed")
end

local function removeFullBright()
    if next(originalLightingSettings) == nil then return end
    
    -- Restore original settings
    for setting, value in pairs(originalLightingSettings) do
        Lighting[setting] = value
    end
    
    -- Remove FullBright effects
    for _, effect in pairs(Lighting:GetChildren()) do
        if effect.Name == "FullBrightColorCorrection" or effect.Name == "FullBrightBloom" then
            effect:Destroy()
        end
    end
    
    fullBrightEnabled = false
    print("‚úÖ FullBright Disabled")
end

local function toggleFullBright()
    if fullBrightEnabled then
        removeFullBright()
        return false
    else
        applyFullBright()
        return true
    end
end

--==// BUTTON FUNCTION //==--

local function newButton(txt, callback)
    local b = Instance.new("TextButton", contentFrame)
    b.Size = UDim2.new(1, 0, 0, 38)
    b.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
    b.TextColor3 = Color3.fromRGB(220, 220, 255)
    b.Font = Enum.Font.GothamMedium
    b.TextSize = 14
    b.Text = txt
    b.AutoButtonColor = false
    
    local btnCorner = Instance.new("UICorner", b)
    btnCorner.CornerRadius = UDim.new(0, 6)
    
    -- Hover effects
    b.MouseEnter:Connect(function()
        b.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
    end)
    
    b.MouseLeave:Connect(function()
        b.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
    end)
    
    b.MouseButton1Click:Connect(function()
        b.BackgroundColor3 = Color3.fromRGB(50, 50, 75)
        callback(b)
        task.wait(0.1)
        b.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
    end)
end

--==// BUTTONS //==--

-- Bring All Jelly
newButton("üîµ Bring All Jelly", function(b)
    b.Text = "üîµ Working..."
    angle = 0
    local c = 0

    for _,v in workspace.LootDrops:GetDescendants() do
        if v.Name:find("Jelly") then
            bring(v)
            c += 1
        end
    end
    
    b.Text = (c > 0) and ("üîµ "..c.." Jelly!") or "No Jelly"
    task.wait(2)
    b.Text = "üîµ Bring All Jelly"
end)

-- Bring Food
newButton("üçî Bring Food", function(b)
    b.Text = "üçî Working..."
    angle = 0
    local c = 0
    local f = {"ChocolateBar","CannedBread","KelpShake","Acorn","JellyPatty","BlueJellyPatty","KrabbyPatty"}

    for _,v in workspace.LootDrops:GetDescendants() do
        if table.find(f, v.Name) then
            bring(v)
            c += 1
        end
    end

    b.Text = (c > 0) and ("üçî "..c.." Food!") or "No Food"
    task.wait(2)
    b.Text = "üçî Bring Food"
end)

-- Bring Scrap
newButton("üîß Bring Scrap", function(b)
    b.Text = "üîß Working..."
    angle = 0
    local c = 0
    local s = {"ToxicBarrel","BrokenMotorcycle","CyclopsHelmet","RubberTire","Muffler","OpenCan"}

    for _,v in workspace.LootDrops:GetDescendants() do
        if table.find(s, v.Name) then
            bring(v)
            c += 1
        end
    end

    b.Text = (c > 0) and ("üîß "..c.." Scrap!") or "No Scrap"
    task.wait(2)
    b.Text = "üîß Bring Scrap"
end)

-- Bring Bandages
newButton("ü©π Bring Bandages", function(b)
    b.Text = "ü©π Healing..."
    angle = 0
    local c = 0

    local bandagesFolder = workspace.LootDrops:FindFirstChild("Bandages")
    if bandagesFolder then
        for _, bandage in bandagesFolder:GetChildren() do
            if bandage:IsA("Model") or bandage:IsA("BasePart") then
                bring(bandage)
                c += 1
            end
        end
    else
        for _,v in workspace.LootDrops:GetDescendants() do
            if v.Name:find("Bandage") or v.Name == "Bandage" then
                bring(v)
                c += 1
            end
        end
    end

    b.Text = (c > 0) and ("ü©π +"..c.." HP!") or "No Bandages"
    task.wait(2)
    b.Text = "ü©π Bring Bandages"
end)

-- Rescue All Losted
newButton("ü¶Ä RESCUE ALL LOSTED", function(b)
    b.Text = "ü¶Ä RESCUING..."
    
    local char = player.Character or player.CharacterAdded:Wait()
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then 
        b.Text = "ü¶Ä NO HRP"
        task.wait(2)
        b.Text = "ü¶Ä RESCUE ALL LOSTED"
        return 
    end

    local saved = 0
    local names = {"MrKrabs", "SpongeBob", "Patrick", "Squidward", "Sandy"}
    
    for _, name in pairs(names) do
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("Model") and obj.Name == name then
                local primary = obj.PrimaryPart or obj:FindFirstChildWhichIsA("BasePart")
                if primary then
                    primary.CFrame = root.CFrame * CFrame.new(0, 0, -5 - (saved * 2))
                    saved = saved + 1
                    task.wait(0.1)
                    break
                end
            end
        end
    end

    if saved > 0 then
        b.Text = "ü¶Ä " .. saved .. "/5 SAVED"
    else
        b.Text = "ü¶Ä NOT FOUND"
    end
    
    task.wait(1.5)
    b.Text = "ü¶Ä RESCUE ALL LOSTED"
end)

-- Full Bright Toggle Button
local fullBrightButton
fullBrightButton = newButton("üåô Full Bright: OFF", function(b)
    local enabled = toggleFullBright()
    if enabled then
        b.Text = "‚òÄÔ∏è Full Bright: ON"
        b.BackgroundColor3 = Color3.fromRGB(40, 60, 80) -- Different color when ON
    else
        b.Text = "üåô Full Bright: OFF"
        b.BackgroundColor3 = Color3.fromRGB(30, 30, 45) -- Original color when OFF
    end
end)

